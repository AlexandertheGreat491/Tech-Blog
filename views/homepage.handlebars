<ol class="post-list">
    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{body}}" target="_blank">{{title}}</a>
                <span>({{body}})</span>
            </div>
            <div class="meta">
                {{user.username}} 
                |
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>